INPUT_FILE='./tailwind/input.css'
OUTPUT_FILE='./static/styles/tailwind.css'

__compilecss() {
  tailwindcss -i $INPUT_FILE -o $OUTPUT_FILE
}

__watchcss() {
  tailwindcss -i $INPUT_FILE -o $OUTPUT_FILE --watch
}

build() {
  __compilecss
}

run() {
  python3 main.py
}

start() {
  __watchcss &
  run
}
